def encrypt_recipe(recipe):
    key = 10  # Clé de chiffrement (peut être n'importe quel nombre entier)
    encrypted_recipe = ""

    for char in recipe:
        encrypted_char = ord(char) + key
        encrypted_recipe += str(encrypted_char) + ","

    return encrypted_recipe[:-1]  # Retirer la virgule finale

# Recette à chiffrer
recipe_to_encrypt = """
# Instructions de la recette...
print("Bonne dégustation !")
"""

# Chiffrer la recette
encrypted_recipe = encrypt_recipe(recipe_to_encrypt)
print(f"Recette chiffrée :\n{encrypted_recipe}") -->
